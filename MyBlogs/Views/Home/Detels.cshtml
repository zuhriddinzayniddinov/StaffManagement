@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Staff detals";
}

@{
    var staff = ViewBag.staff as Staff;
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3>@staff.FirstName @staff.LastName</h3>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/@(staff.PhotoFilePath ?? "user.png")">
                <h4>ID:@staff.Id</h4>
                <h4>Email:@staff.Email</h4>
                <h4>Department:@staff.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a asp-controller="home" asp-action="edit" asp-route-Id="@staff.Id" class="btn btn-primary">Edit</a>
                <form asp-controller="home" asp-action="delete" asp-route-Id="@staff.Id" method="post">
                    <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>